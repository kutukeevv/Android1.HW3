<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#1f304e"
    android:layout_marginBottom="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:padding="6dp"
        android:id="@+id/item_user_avatar_img"
        android:background="@drawable/style_avatar"
        android:src="@drawable/avatar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="64dp"
        android:layout_height="64dp" />

    <TextView
        android:id="@+id/item_user_name_txt"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#fff"
        app:layout_constraintTop_toTopOf="@+id/item_user_avatar_img"
        app:layout_constraintLeft_toRightOf="@+id/item_user_avatar_img"
        android:text="Azamat GT-28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/item_chat_last_message_txt"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/item_user_name_txt"
        app:layout_constraintLeft_toRightOf="@+id/item_user_avatar_img"
        android:textSize="16sp"
        android:textColor="#ccc"
        android:text="Hello buddy i want left the lesson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        app:layout_constraintStart_toStartOf="@+id/item_user_avatar_img"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="18dp"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@+id/item_chat_last_message_txt"
        android:background="#ccc"
        android:layout_width="wrap_content"
        android:layout_height="1dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>